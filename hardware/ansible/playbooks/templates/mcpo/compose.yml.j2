---
services:
  mcpo:
    image: ${CONTAINER_REGISTRY:-ghcr.io}/open-webui/mcpo:main
    restart: unless-stopped
    volumes:
      - ./config.json:/mcpo-config/config.json:ro
    command: ["--config", "/mcpo-config/config.json"]
    environment:
      - TAVILY_API_KEY=${TAVILY_API_KEY}
      - PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY}
      - EXA_API_KEY=${EXA_API_KEY}
    healthcheck:
      # Switch to an actual network request once we have curl/wget installed.
      test: ["CMD", "ls"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 5s
    # TODO: For now, requires running as root.
    deploy:
      resources:
        limits:
          memory: 2G
        reservations:
          memory: 512M
    network_mode: service:tailscale

  tailscale:
    image: tailscale/tailscale:latest
    restart: unless-stopped
    hostname: mcpo
    volumes:
      - tailscale-tmp:/tmp
    environment:
      - TS_HOSTNAME={{ service_name }}
      - TS_USERSPACE=true
      - TS_EXTRA_ARGS=--advertise-tags={{ tailscale_advertise_tags_arg }}
      - TS_SOCKET=/tmp/tailscaled.sock
    cap_add:
      - NET_ADMIN
    env_file:
      - .env.tailscale
    networks:
      - internal

  caddy:
    image: caddy:2-alpine
    restart: unless-stopped
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - /mnt/data/mcpo-caddy-data:/data
      - caddy-config-tmp:/config
      - tailscale-tmp:/var/run/tailscale
    depends_on:
      - mcpo
    network_mode: service:tailscale

networks:
  internal:
    driver: bridge

volumes:
  caddy-config-tmp:
  tailscale-tmp:
