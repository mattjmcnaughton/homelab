---
services:
  immich-postgres:
    image: ${CONTAINER_REGISTRY:-ghcr.io}/immich-app/postgres:14-vectorchord0.4.3-pgvectors0.2.0@sha256:32324a2f41df5de9efe1af166b7008c3f55646f8d0e00d9550c16c9822366b4a
    restart: unless-stopped
    volumes:
      - /mnt/data/immich-postgres-data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: ${IMMICH_DB_DATABASE_NAME}
      POSTGRES_USER: ${IMMICH_DB_USERNAME}
      POSTGRES_PASSWORD: ${IMMICH_DB_PASSWORD}
      POSTGRES_INITDB_ARGS: '--data-checksums'
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${IMMICH_DB_USERNAME} -d ${IMMICH_DB_DATABASE_NAME}"]
      interval: 5s
      timeout: 5s
      retries: 5
    network_mode: service:tailscale
    user: "1000:1000"
    cap_drop:
      - ALL
    shm_size: 128mb

  immich-redis:
    image: ${CONTAINER_REGISTRY:-docker.io}/valkey/valkey:8-bookworm@sha256:facc1d2c3462975c34e10fccb167bfa92b0e0dbd992fc282c29a61c3243afb11
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 5s
      retries: 5
    network_mode: service:tailscale
    # Redis does not work well if not root...

  immich-machine-learning:
    image: ${CONTAINER_REGISTRY:-ghcr.io}/immich-app/immich-machine-learning:${IMMICH_VERSION:-release}
    restart: unless-stopped
    volumes:
      - immich-model-cache:/cache
    environment:
      - IMMICH_PORT=${IMMICH_MACHINE_LEARNING_PORT:-3003}
      - IMMICH_HOST=0.0.0.0
    healthcheck:
      test: ["CMD", "echo", "skip-health-check"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    network_mode: service:tailscale
    user: "1000:1000"
    cap_drop:
      - ALL
    deploy:
      resources:
        limits:
          memory: 4G
        reservations:
          memory: 1G

  immich-server:
    image: ${CONTAINER_REGISTRY:-ghcr.io}/immich-app/immich-server:${IMMICH_VERSION:-release}
    restart: unless-stopped
    depends_on:
      immich-postgres:
        condition: service_healthy
      immich-redis:
        condition: service_healthy
      immich-machine-learning:
        condition: service_healthy
    volumes:
      - /mnt/data/immich-uploads-data:/data
      - /etc/localtime:/etc/localtime:ro
    environment:
      # Database settings
      - DB_HOSTNAME=localhost
      - DB_PORT=5432
      - DB_USERNAME=${IMMICH_DB_USERNAME}
      - DB_PASSWORD=${IMMICH_DB_PASSWORD}
      - DB_DATABASE_NAME=${IMMICH_DB_DATABASE_NAME}

      # Redis settings
      - REDIS_HOSTNAME=localhost
      - REDIS_PORT=6379

      # Machine learning settings
      - IMMICH_MACHINE_LEARNING_URL=http://localhost:3003

      # Server settings
      - IMMICH_PORT=${IMMICH_SERVER_PORT:-2283}
      - IMMICH_HOST=0.0.0.0
      - IMMICH_LOG_LEVEL=${IMMICH_LOG_LEVEL:-log}

      # Upload settings
      - UPLOAD_LOCATION=/data

      # Security settings
      - JWT_SECRET=${IMMICH_JWT_SECRET}

      # Optional: Timezone
      - TZ=${IMMICH_TIMEZONE:-UTC}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:2283/server-info/ping"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    user: "1000:1000"
    cap_drop:
      - ALL
    deploy:
      resources:
        limits:
          memory: 4G
        reservations:
          memory: 1G
    network_mode: service:tailscale

  tailscale:
    image: tailscale/tailscale:latest
    restart: unless-stopped
    hostname: immich
    volumes:
      - tailscale-tmp:/tmp
    environment:
      - TS_HOSTNAME={{ service_name }}
      - TS_USERSPACE=true
      - TS_EXTRA_ARGS=--advertise-tags={{ tailscale_advertise_tags_arg }}
      - TS_SOCKET=/tmp/tailscaled.sock
    cap_add:
      - NET_ADMIN
    env_file:
      - .env.tailscale
    networks:
      - internal

  caddy:
    image: caddy:2-alpine
    restart: unless-stopped
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - /mnt/data/immich-caddy-data:/data
      - caddy-config-tmp:/config
      - tailscale-tmp:/var/run/tailscale
    depends_on:
      - immich-server
    network_mode: service:tailscale

networks:
  internal:
    driver: bridge

volumes:
  immich-model-cache:
  caddy-config-tmp:
  tailscale-tmp:
